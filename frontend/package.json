{
	"name": "home-automation-frontend",
	"description": "React frontend for home automation hub",
	"version": "0.1.0",
	"main": "src/index.jsx",
	"contributors": [
		"Maciej Rim <maciej.rim@gmail.com>",
		"Patrycja Bojdoł <pat.bojdol@gmail.com>",
		"Błażej Barcicki <blazej.barcicki@gmail.com>",
		"Tomasz Gawlik <endero238@gmail.com>"
	],
	"license": "GPL-3.0",
	"scripts": {
		"dev": "webpack-dev-server --host 0.0.0.0 --config webpack/dev.js",
		"build": "webpack --inline --progress --config webpack/dist.js",
		"test": "jest --passWithNoTests",
		"prettier": "prettier './src/**/*.(js|jsx)' --check",
		"prettier:fix": "prettier './src/**/*.(js|jsx)' --write",
		"lint:js": "eslint ./src/ --ext .js,.jsx",
		"lint:css": "stylelint './src/**/*.(js|jsx)' --syntax scss",
		"test:all": "yarn lint:js && yarn lint:css && yarn prettier && yarn test"
	},
	"husky": {
		"hooks": {
			"pre-push": "yarn test:all"
		}
	},
	"dependencies": {
		"@apollo/client": "^3.3.6",
		"@babel/runtime": "^7.12.5",
		"@meronex/icons": "^4.0.0",
		"chart.js": "^2.9.4",
		"date-fns": "^2.16.1",
		"framer-motion": "^3.0.0",
		"graphql": "^15.4.0",
		"history": "^5.0.0",
		"lodash": "^4.17.20",
		"polished": "^4.0.5",
		"react": "^17.0.1",
		"react-chartjs-2": "^2.11.1",
		"react-dom": "^17.0.1",
		"react-error-boundary": "^3.1.0",
		"react-hook-form": "^6.13.1",
		"react-is": "^17.0.1",
		"react-router": "^6.0.0-beta.0",
		"react-router-dom": "^6.0.0-beta.0",
		"styled-components": "^5.2.1",
		"subscriptions-transport-ws": "^0.9.18"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@babel/plugin-transform-runtime": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"@babel/preset-react": "^7.12.10",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.2.2",
		"babel-plugin-styled-components": "^1.12.0",
		"browserslist": "^4.16.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^7.0.0",
		"eslint": "^7.15.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"husky": "^4.3.6",
		"jest": "^26.6.3",
		"prettier": "^2.2.1",
		"prop-types": "^15.7.2",
		"react-refresh": "^0.9.0",
		"react-test-renderer": "^17.0.1",
		"stylelint": "^13.8.0",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.10.0",
		"terser-webpack-plugin": "^5.0.3",
		"thread-loader": "^3.0.1",
		"webpack": "^5.10.3",
		"webpack-bundle-tracker": "0.4.3",
		"webpack-cli": "^4.2.0",
		"webpack-dev-server": "^3.11.0",
		"webpack-merge": "^5.7.2",
		"workbox-webpack-plugin": "^6.0.2"
	},
	"browserslist": [
		">1%",
		"not ie 11",
		"not op_mini all"
	],
	"babel": {
		"presets": [
			"@babel/preset-env",
			[
				"@babel/preset-react",
				{
					"runtime": "automatic"
				}
			]
		],
		"plugins": [
			"@babel/plugin-transform-runtime",
			"babel-plugin-styled-components"
		]
	},
	"eslintConfig": {
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"env": {
			"browser": true,
			"es6": true,
			"node": true,
			"jest": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:react/recommended"
		],
		"globals": {
			"workbox": "readonly",
			"csrf_token": "readonly"
		},
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaVersion": 2020,
			"sourceType": "module"
		},
		"plugins": [
			"react",
			"react-hooks"
		],
		"rules": {
			"react/jsx-uses-react": "off",
			"react/react-in-jsx-scope": "off",
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn",
			"semi": [
				"error",
				"always"
			]
		}
	},
	"stylelint": {
		"processors": [
			"stylelint-processor-styled-components"
		],
		"extends": [
			"stylelint-config-recommended",
			"stylelint-config-styled-components"
		]
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4,
		"semi": true,
		"printWidth": 100
	}
}
